<!-- Category Filter -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Filter by Category</h5>
                <div class="d-flex flex-wrap gap-2">
                    <a href="/dashboard" class="btn btn-outline-primary">All</a>
                    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                        <% categories.forEach(category => { %>
                            <a href="/dashboard?category=<%= category._id %>" 
                               class="btn btn-outline-primary">
                                <%= category.categoryName %>
                            </a>
                        <% }); %>
                    <% } else { %>
                        <a href="/dashboard?category=electronics" class="btn btn-outline-primary">Electronics</a>
                        <a href="/dashboard?category=clothing" class="btn btn-outline-primary">Clothing</a>
                        <a href="/dashboard?category=books" class="btn btn-outline-primary">Books</a>
                        <a href="/dashboard?category=home" class="btn btn-outline-primary">Home & Kitchen</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div> 