<!-- Product Card -->
<div class="col-md-4 mb-4">
    <div class="card h-100 product-card">
        <img src="<%= typeof product.image !== 'undefined' ? product.image : 'https://via.placeholder.com/300x200' %>"
            class="card-img-top" alt="<%= typeof product.name !== 'undefined' ? product.name : 'Product' %>">
        <span class="badge bg-primary category-badge">
            <%= typeof product.category !=='undefined' ? product.category.categoryName : 'Uncategorized' %>
        </span>
        <div class="card-body">
            <h5 class="card-title">
                <%= typeof product.productName !=='undefined' ? product.productName : 'Product Name' %>
            </h5>
            <p class="card-text">
                <%= typeof product.productDescription !=='undefined' ? product.productDescription
                    : 'No description available' %>
            </p>
            <p class="card-text">
                <strong>Price: </strong>$<%= typeof product.productPrice !=='undefined' ? product.productPrice : '0.00'
                    %>
            </p>
        </div>
    </div>
</div>